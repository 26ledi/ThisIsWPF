<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="800">

    <Grid>
        <Label HorizontalAlignment="Center" FontSize="50">Menu</Label>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" >
            <Button Content="Add Clothes" Click="Button_Add_Click" Background="LightBlue" Cursor="Hand" Width="250" Height="60" FontSize="30"  Margin="0 200 0 0"></Button>
        </StackPanel>
        <StackPanel Orientation="Vertical">
            <Button x:Name="Button_Costume" Content="M/F Costume"  Click="Button_Costume_Click"  Background="LightBlue" Cursor="Hand" FontSize="30" Width="250" Height="60" Margin="0 300 0 10 "></Button>
        </StackPanel>
        <StackPanel Orientation="Vertical">
            <Button Content="Red Jeans" Background="LightBlue"  x:Name="Button_Jeans" Click="Button_Jeans_Click" Cursor="Hand" FontSize="30" Width="250" Height="60" Margin="0 400 0 0 "></Button>
        </StackPanel>
        

    </Grid>
</Window>