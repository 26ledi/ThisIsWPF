<Window x:Class="WpfApp1.Red_Jeans"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Red_Jeans" Height="450" Width="800">
    <Grid>
        <Label HorizontalAlignment="Center" FontSize="50">Red Jeans</Label>
        <StackPanel>
            <Button x:Name="ShowRed" Click="ShowRed_Click" Width="100" Background="LightBlue" Margin="0 90 0 0">Show Red Jeans</Button>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="149,110,136,60">
            <TextBox x:Name="FinalRed" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible">
                
            </TextBox>
        </StackPanel>
        
    </Grid>
</Window>
